<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>siteforge - Drag and Drop website builder</title>

    <!-- Stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,700,700i" rel="stylesheet" />
    <link href="styles/normalize.min.css" rel="stylesheet" />
    <link href="styles/skeleton.min.css" rel="stylesheet" />
    <link href="styles/main.css" rel="stylesheet" />
  </head>
  <body>
    <header>
      <h1 class="header-logo">
        <a href="/">site<span>forge</span></a>
      </h1>
      <nav class="header-nav">
        <a href="/support">Support</a>
      </nav>
    </header>

    <section class="preview">
      <h3 contenteditable>Project Name</h3>
      <div class="drop">
        <div class="placeholder">Drag components here</div>
      </div>

      <button>Export HTML and CSS</button>
    </section>

    <aside>
      <ul class="component-menu">
        <% components.forEach(function(component) { %>
          <li>
          <%= component %>
          <ul class="dropdown">
            <li>
              <img class="component" name="<%= component %>" data-id="1" 
              src="components/header1.png" />
            </li>
            <li>
              <img class="component" name="header" data-id="2"
              src="components/work1.png" />
            </li>
            <li>
              <img class="component" name="header" data-id="3"
              src="components/about1.png" />
            </li>
            <li>
              <img class="component" name="header" data-id="4"
              src="components/features1.png" />
            </li>
            <li>
              <img class="component" name="header" data-id="5"
              src="components/testimonials1.png" />
            </li>
          </ul>
        </li>
        <% }); %>
      </ul>
    </aside>

    <!-- JavaScript -->
    <script src="js/jquery.min.js"></script>
    <script src="js/jquery-ui.min.js"></script>
    <script src="js/app.js"></script>
  </body>
</html>

  </body>
</html>
